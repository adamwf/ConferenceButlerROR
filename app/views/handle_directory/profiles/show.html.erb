											<div class="col-sm-8 col-md-7">
												<div class="profile-pic">
													<%= current_handle_user.image.present? ? image_tag(current_handle_user.image.url, :width => 120, :height => 120, :class => 'img-circle') : image_tag("/profile.png", :width => 120, :height => 120, :class => 'img-circle')%>
												</div>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<label class="col-sm-4 col-md-3 control-label">First Name</label>
											<div class="col-sm-8 col-md-7">
												<%= current_handle_user.first_name %>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="row">
											<label class="col-sm-4 col-md-3 control-label">Last Name</label>
