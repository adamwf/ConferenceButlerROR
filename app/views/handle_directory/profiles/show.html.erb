							<h3 class="tab-cont-head">Add your Social Profile</h3>
							<div class="row">
							<div class="col-md-9">
								<div class="row">
									<% current_handle_user.social_logins.each do |social|%>
										<div class="col-xs-6 col-sm-3 col-md-2">
											<% if social.provider == "facebook"%>
												<div class="social_profile">
													<a href=""><span class="m-r-10"><img src="/social_ic1.png" alt=""></i></span><%= truncate(social.user_name, omision: "...", length: 7)%></a>
