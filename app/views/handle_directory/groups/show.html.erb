<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.group_name %>
</p>
<p>
  <strong>Owner</strong>
  <%= @group.user.user_name %>
</p>
<p>
  <strong>Group Image:</strong>
  <%= image_tag(@group.group_image.url, :class => "img-responsive img-thumbnail") %>
</p>
<% if @group.user == current_handle_user %>
	<%= link_to 'Edit', edit_handle_directory_group_path(@group) %> |
<%else%>
	<% if is_muted?(@group)%>
		<%= link_to 'Un Mute', unmute_handle_directory_group_path %>
	<%else%>
		<%= link_to 'Mute', mute_handle_directory_group_path %> |
	<%end%>
<%end%>
<%= link_to 'Back', handle_directory_groups_path %> |


<h1>Group Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.members.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>