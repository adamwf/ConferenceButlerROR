<%= form_for @user, url: forward_info_path(@user.id), class: "form-control", method: :post do |f|%>
	<div class="detail-form">
		<div class="form-group">
			<div class="row">
				<label class="col-sm-4 col-md-3 control-label">Current Password</label>
				<div class="col-sm-8 col-md-7">
					<%= f.password_field :current_password, class: 'form-control', required: true %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<label class="col-sm-4 col-md-3 control-label">New Password</label>
				<div class="col-sm-8 col-md-7">
					<%= f.password_field :new_password, class: 'form-control', required: true %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<label class="col-sm-4 col-md-3 control-label">Confirm New Password</label>
				<div class="col-sm-8 col-md-7">
					<%= f.password_field :password_confirmation, class: 'form-control', required: true %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-offset-4 col-sm-8 col-md-offset-3 col-md-7">
				  <button type="submit" class="btn btn-blue">Save Changes</button>
				</div>
			</div>
		</div>
	</div>
<%end%>
									