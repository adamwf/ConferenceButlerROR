							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Confirm Password</label>
								<div class="col-sm-8 col-md-7">
									<%= current_manager.email %>					
								</div>
							</div>
						</div> -->
						<!-- <div class="form-group">
							<div class="row">
								<div class="col-sm-offset-4 col-sm-8 col-md-offset-3 col-md-7">
									<button type="button" class="btn btn-blue">Save Changes</button>
								</div>
							</div>
						</div> -->
					</div>						
				</div>
			</div>
		</div>
	</div>
</section>	
