<section class="main-block">
	<div class="container">
		<div class="box">
			<div class="box-head">
				<h3>Account Settings</h3>
			</div>
			<div class="box-body">
				<div class="content-a">
					<%= render 'heading' %>
					<div class="tab-content">
						<div id="menu3" class="tab-pane fade  in active">
							<div class="remind-me-later-a">
								<%= form_for @reminder, :url => update_remind_me_attendee_central_settings_path, :method => :post, :html => {:class => 'radio-btn'} do |f| %>
									<div class="radio-btn-inner">
										<label>
											<%= f.radio_button :delay_time, "1", :checked => true%>
											<span>1 Hours</span></label>
									</div>
									<div class="radio-btn-inner">
										<label>
											<%= f.radio_button :delay_time, "2"%>
											<span>2 Hours</span></label>
									</div>
									<div class="radio-btn-inner">
										<label>
											<%= f.radio_button :delay_time, "12"%>
											<span>12 Hours</span></label>
									</div>
									<div class="radio-btn-inner">
										<label>
											<%= f.radio_button :delay_time, "never", :value => "never"%>
											<span>Never Remind Me</span></label>
									</div>
									<div class="offset-44">
										<%= f.button "Save",:class => "btn btn-blue" %>
									</div>
								<%end%>
							</div>

						</div
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
