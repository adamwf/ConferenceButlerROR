<section class="main-block">
	<div class="container">
		<div class="row">
		    <!-- begin col-6 -->
		    <div class="col-md-12">
		    	
				<div class="tab-content">
					<div class="tab-pane fade active in" id="default-tab-1">
						
						<div class="tab-pane">
							<h3 class="tab-cont-head clearfix">
								<div class="col-sm-6 col-xs-6">Create Request to Manager</div>
									<div class="col-sm-6 col-xs-6 text-right attendee-cent-s">
									<%= link_to "Event List", attendee_central_home_index_path, :class => "btn link-msg" %>
									</div>
								</div>
							</h3>
							<form class="form-horizontal attendeereqtab-s">
								<%= form_for InviteManager.new, url: attendee_central_invitations_path do |f|%>
									<div class="detail-form m-t-40 m-b-40">
										<div class="form-group">
											<label class="col-md-4 control-label">Name of Manager</label>
											<div class="col-md-5">
												 <%= f.collection_select :reciever_id, User.where(role: "manager"), :id, :user_name, {:prompt => 'Please select'}, {:class=>"form-control" ,id: "user_id"}%>
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-4 control-label">Company</label>
											<div class="col-md-5">
												<%= f.text_field :company_name, class: "form-control", required: true, placeholder: "Company Name"%>
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-4 control-label">Email</label>
											<div class="col-md-5">
												<%= f.email_field :email, class: "form-control", required: true, placeholder: "Email"%>
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-4 control-label">Event Name</label>
											<div class="col-md-5">
												<%= f.collection_select :event_id, Event.where('start_time > ? AND user_id =?', Time.current, current_attendee), :id, :name, {:prompt => 'Please select'}, {:class=>"form-control" ,id: "event_id"}%>
											</div>
										</div>	
										<div class="form-group">
											<div class="col-md-5">
												<% f.hidden_field :sender_id, value: current_attendee.id%>
											</div>
										</div>	
										<div class="form-group">
											<div class="text-center attendee-cent-s">
												<button class="btn btn-primary m-r-5 m-b-5" type="submit">Send Attendee Request To Manager</button>
											</div>
										</div>
									</div>
								<%end%>
							</form>								
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>